<resources>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/alert_dialog_accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/alert_dialog_textColorPrimary</item>
        <!-- Used for the background -->
        <item name="android:background">@color/alert_dialog_background</item>
        <item name="colorPrimary">#00FF00</item>

        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveButton</item>
    </style>

    <style name="positiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorPrimary">#FF0000</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>